extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de compositores
                span [
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
                span ]
        .w3-container
            table.w3-table-all
                tr
                    th ID
                    th Nome
                    th Periodo
                    th Ações
                
                each s in compositores
                    tr
                        td= s.id
                        td
                            a(href="compositores/"+s.id)= s.nome
                        td= s.periodo
                        td
                            span [
                            a.w3-btn.w3-round.w3-teal(href="/compositores/edit/"+s.id) Edit
                            span ]
                            span [
                            a.w3-btn.w3-round.w3-red(href="/compositores/delete/"+s.id) Delete
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by EngWeb2024 in #{d}
    