extends layout 

block content       
    .w3-card-4
        header.w3-container.w3-purple
            h2 Compositor Form
    
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=compositor.id readonly)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value=compositor.nome)
                label Data de Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" value=compositor.dataNasc)
                label Data de Óbito
                input.w3-input.w3-round(type="text" name="dataObito" value=compositor.dataObito)
                fieldset
                    legend Período
                    input.w3-check(type="checkbox" name="periodoBarroco" value="Barroco")
                    label Barroco
                    input.w3-check(type="checkbox" name="periodoRenascimento" value="Renascimento")
                    label Renascimento
                label Bio
                input.w3-input.w3-round(type="text" name="bio" value=compositor.bio)
            br
            button.w3-btn.w3-red.w3-mb-2(type="submit") Submit Changes
       
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2024 in #{d} - [
                a(href='/') Return ]
                span 